@model Beer

@{
    ViewData["Title"] = ViewBag.Action+" beer";
}

<h1>@ViewData["Title"]</h1>
<form method="post" class="create" novalidate>
    
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Alcohol" class="control-label"></label>
        <input asp-for="Alcohol" class="form-control" />
    <span asp-validation-for="Alcohol" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BreweryId" class="control-label"></label>
        <select asp-for="BreweryId" asp-items="@ViewBag.Breweries" class="form-control">
            <option value="">Select a brewery</option>
    
        </select>
        <span asp-validation-for="BreweryId" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="BeerTypeId" class="control-label"></label>
        <select asp-for="BeerTypeId" asp-items="@ViewBag.BeerTypes" class="form-control">
            <option value="">Select type of beer</option>
        </select>
        <span asp-validation-for="BeerTypeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="@ViewBag.Action" class="btn btn-primary" />
    </div>


</form>

