@model ICollection<Beer>

@{
    // Layout = "_Layout";
    ViewData["Title"] = "Beers";
    
}

<h1>@ViewData["Title"]</h1>


<div>
    <a asp-action="Create"><button type="button">Add new beer</button></a>

    @if (Model.Count == 0){
        <p>No beers found</p>
    }
    else{
        <table id="content-table">
            <tr id="table-title">
                <td>Name</td>
                <td>Type</td>
                <td>Alcohol</td>
                <td>Brewery</td>
                <td></td>
                <td></td>
            </tr>
            @foreach (var beer in Model){
            @* <div class="content-line"> *@
                <tr>
                    <td>@beer.Name</td>
                    <td>@beer.BeerType.Name</td>
                    <td>@beer.Alcohol%</td>
                    <td>@beer.Brewery.Name</td>
                    <td>
                        <form class="crud-button" asp-route-id="@beer.Id" asp-action="Delete" method="post">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                    <td>
                        <form class="crud-button" asp-route-id="@beer.Id" asp-action="Edit" method="get">
                            <button type="submit">Edit</button>
                        </form>
                    </td>
                </tr>
                // </div>

            }
        </table>
    }
    

</div>